<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_us_list"
    android:orientation="vertical"
    tools:context="sg.edu.nus.iss.phoenix.user.android.ui.UserListScreen">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        tools:text="Name" />
    <EditText
        android:id="@+id/maintain_user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="User Name" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        tools:text="Description" />

    <EditText
        android:id="@+id/maintain_user_desc_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Enter description" />

</LinearLayout>
